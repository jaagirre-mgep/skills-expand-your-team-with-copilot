{
  "name": "Python 3 & MongoDB Full",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".." 
  },
  "forwardPorts": [8000, 27017],
  
  // Arrancamos el servicio de base de datos cada vez que abres el contenedor
  "postStartCommand": "mongod --fork --logpath /var/log/mongodb/mongod.log --dbpath /data/db",

  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "ms-python.python",
        "ms-python.debugpy",
        "mongodb.mongodb-vscode"
      ]
    }
  },
  "remoteUser": "vscode"
}