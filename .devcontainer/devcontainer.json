{
  "name": "Python 3 with MongoDB",
  "image": "mcr.microsoft.com/devcontainers/python:3.13-ubuntu-24.04",
  "forwardPorts": [8000, 27017],
  "postCreateCommand": "bash ./.devcontainer/postCreate.sh",
  "postStartCommand": "bash ./.devcontainer/postStart.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "ms-python.python",
        "ms-python.debugpy"
      ]
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/mongodb:1": {
      "version": "7.0"
    }
  }
}
