{
  "name": "Python 3 & MongoDB",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "forwardPorts": [8000, 27017],
  "postStartCommand": "mongod --fork --logpath /var/log/mongodb/mongod.log --dbpath /data/db",
  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "ms-python.python",
        "ms-python.debugpy",
        "mongodb.mongodb-vscode" 
      ]
    }
  },
  "remoteUser": "vscode"
}