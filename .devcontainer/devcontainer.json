{
  "name": "Python 3 & MongoDB",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "forwardPorts": [8000, 27017],
  
  // Se ejecuta una sola vez al crear el contenedor
  "postCreateCommand": "pip install -r src/requirements.txt",
  
  // Se ejecuta cada vez que el contenedor arranca
  "postStartCommand": "mongod --fork --logpath /var/log/mongodb/mongod.log --dbpath /data/db",
  
  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "ms-python.python",
        "ms-python.debugpy",
        "mongodb.mongodb-vscode"
      ]
    }
  },
  "remoteUser": "vscode"
}