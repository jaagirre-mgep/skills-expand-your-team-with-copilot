{
  "name": "Python 3 & MongoDB",
  "image": "mcr.microsoft.com/vscode/devcontainers/python:3.13",
  "features": {
    "ghcr.io/devcontainers/features/mongodb:1": {
      "version": "7.0"
    }
  },
  "forwardPorts": [8000, 27017],
  "postCreateCommand": "pip install -r src/requirements.txt",
  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "ms-python.python",
        "ms-python.debugpy",
        "mongodb.mongodb-vscode"
      ]
    }
  },
  "remoteUser": "vscode"
}