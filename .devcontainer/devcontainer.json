{
  "name": "FastAPI-Mongo-Works",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "forwardPorts": [8000, 27017],

  // ESTO INSTALA TUS REQUERIMIENTOS DESPUÃ‰S DE ARRANCAR
  "postCreateCommand": "pip install --user -r src/requirements.txt",

  // ESTO ARRANCA MONGO CADA VEZ QUE ENTRAS
  "postStartCommand": "sudo mongod --fork --logpath /var/log/mongodb/mongod.log --dbpath /data/db",

  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "ms-python.python",
        "ms-python.debugpy",
        "mongodb.mongodb-vscode"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python"
      }
    }
  },
  "remoteUser": "vscode"
}